<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Vuris App{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body style="background-color: #f4f6f9;">

<nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background-color: #003B5C;">
    <div class="container-fluid px-4">
        <a class="navbar-brand fw-bold" href="{{ path('app_dashboard') }}">
            <i class="bi bi-folder"></i> VURIS <span style="font-weight: normal; font-size: 0.8em; opacity: 0.8;">App</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            {% if app.user %}
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_excel') }}">Excel Import</a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                            <span class="text-white me-3 d-none d-md-block">
                                Ingelogd als: <strong>{{ app.user.userIdentifier }}</strong>
                            </span>
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-light">
                        Uitloggen
                    </a>
                </div>
            {% else %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_login') }}">Inloggen</a>
                    </li>
                </ul>
            {% endif %}
        </div>
    </div>
</nav>

<div class="py-4"> {% block body %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>