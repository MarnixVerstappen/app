{% extends 'base.html.twig' %}

{% block title %}Dashboard - Vuris{% endblock %}

{% block body %}
    <div class="container mt-5">

        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-5 text-dark">Welcome back, <span style="color: #E86E12;">{{ user_firstname }}</span>!</h1>
                <p class="text-muted">
                    Huidige rechten:
                    {% for role in app.user.roles %}
                        {% if role != 'ROLE_USER' %}
                            <span class="badge bg-secondary">{{ role|split('_')[1] }}</span>
                        {% endif %}
                    {% endfor %}
                </p>
                <p class="text-muted">Select a tool below to get started.</p>
            </div>
        </div>

        <div class="row">

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body text-center">
                        <div class="mb-3" style="font-size: 3rem;"><i class="bi bi-folder"></i></div>
                        <h4 class="card-title">Excel Importer</h4>
                        <p class="card-text text-muted">Upload and view Vuris project files.</p>
                        <a href="{{ path('app_excel') }}" class="btn btn-outline-primary w-100">Open Tool</a>
                    </div>
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0" style="background-color: #fff3cd;">
                        <div class="card-body text-center">
                            <div class="mb-3" style="font-size: 3rem;">⚙️</div>
                            <h4 class="card-title text-warning-emphasis">Admin Settings</h4>
                            <p class="card-text text-muted">Manage users and system configurations.</p>
                            <button class="btn btn-warning w-100">Manage Users</button>
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body text-center">
                        <div class="mb-3" style="font-size: 3rem;"><i class="bi bi-person-fill"></i></div>
                        <h4 class="card-title">My Profile</h4>
                        <p class="card-text text-muted">Change your password or settings.</p>
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger w-100">Log Out</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}