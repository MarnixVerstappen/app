{% extends 'base.html.twig' %}

{% block title %}Project: {{ project.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
            <div>
                <h1 class="h3" style="color: #003B5C;">{{ project.title }}</h1>
                <span class="text-muted"><i class="bi bi-calendar-event me-1"></i> Startdatum: {{ project.startDate ? project.startDate|date('d-m-Y') : 'Niet ingesteld' }}</span>
            </div>
            <div>
                {# Knop naar team beheer #}
                <a href="{{ path('app_project_members', {'id': project.id}) }}" class="btn btn-outline-primary me-2">
                    <i class="bi bi-people me-1"></i> Team Beheren
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">Terug</a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #003B5C;">
                        <h5 class="mb-0">Project Taken</h5>
                        <span class="badge bg-light text-dark">{{ project.projectTasks|length }} taken</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th style="width: 50%;">Omschrijving</th>
                                <th>Fase</th>
                                <th>Status</th>
                                <th class="text-end">Actie</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for task in project.projectTasks %}
                                <tr>
                                    <td>{{ task.description }}</td>
                                    <td>{{ task.phase|default('-') }}</td>
                                    <td>
                                        {% if task.status == 'Open' %}
                                            <span class="badge bg-secondary">Open</span>
                                        {% elseif task.status == 'Gereed' %}
                                            <span class="badge bg-success">Gereed</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">{{ task.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <a href="#" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        Er zijn nog geen taken ge√Ømporteerd voor dit project.
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h6 class="mb-0 fw-bold">Project Team</h6>
                    </div>
                    <ul class="list-group list-group-flush">
                        {% for member in project.projectMembers %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ member.user.firstname }}
                                <span class="badge rounded-pill
                                {% if member.vurisRole == 'V' %}bg-warning text-dark
                                {% elseif member.vurisRole == 'U' %}bg-secondary
                                {% elseif member.vurisRole == 'R' %}bg-success
                                {% elseif member.vurisRole == 'I' %}bg-info text-dark
                                {% else %}bg-light text-dark border{% endif %}">
                                {{ member.vurisRole }}
                            </span>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted small">Nog geen teamleden.</li>
                        {% endfor %}
                    </ul>
                    <div class="card-body">
                        <a href="{{ path('app_project_members', {'id': project.id}) }}" class="btn btn-sm w-100 btn-outline-primary">
                            Leden toevoegen / wijzigen
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}