{# templates/project/show.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Make it look like Excel */
        .excel-table {
            border-collapse: collapse;
            font-family: Calibri, sans-serif;
            font-size: 14px;
        }
        .excel-table th, .excel-table td {
            border: 1px solid #dcdcdc;
            padding: 4px 8px;
            min-width: 60px;
            white-space: nowrap; /* Prevent wrapping like real Excel */
        }
        /* The Header Row (A, B, C) */
        .excel-header {
            background-color: #f8f9fa;
            text-align: center;
            font-weight: bold;
            color: #666;
        }
        /* The Index Column (1, 2, 3) */
        .excel-index {
            background-color: #f8f9fa;
            text-align: center;
            font-weight: bold;
            color: #666;
            width: 40px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <h1>{{ project.title }}</h1>

        <ul class="nav nav-tabs" id="excelTabs" role="tablist">
            {% for data in sheetsData %}
                <li class="nav-item">
                    <button
                            class="nav-link {{ loop.first ? 'active' : '' }}"
                            data-bs-toggle="tab"
                            data-bs-target="#sheet-{{ data.entity.id }}"
                    >
                        {{ data.entity.title }}
                    </button>
                </li>
            {% endfor %}
        </ul>

        <div class="tab-content p-3 border border-top-0 bg-white">
            {% for data in sheetsData %}
                <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" id="sheet-{{ data.entity.id }}">

                    {% if data.maxRow == 0 %}
                        <div class="alert alert-warning">Empty Sheet</div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="excel-table">
                                <thead>
                                <tr>
                                    <th class="excel-index"></th>

                                    {% for colLetter in data.headers %}
                                        <th class="excel-header">{{ colLetter }}</th>
                                    {% endfor %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for r in 1..data.maxRow %}
                                    <tr>
                                        <td class="excel-index">{{ r }}</td>

                                        {% for c in 1..data.headers|length %}

                                            {# 1. Initialize variables for this specific cell #}
                                            {% set cell = data.grid[r][c] ?? null %}
                                            {% set cellStyle = '' %}

                                            {# 2. Build the CSS style string if the cell exists #}
                                            {% if cell %}
                                                {# Bold #}
                                                {% if cell.bold %}
                                                    {% set cellStyle = cellStyle ~ 'font-weight: bold;' %}
                                                {% endif %}

                                                {# Text Color (prepend # because you stored raw hex) #}
                                                {% if cell.color %}
                                                    {% set cellStyle = cellStyle ~ 'color: #' ~ cell.color ~ ';' %}
                                                {% endif %}

                                                {# Background Fill #}
                                                {% if cell.fill %}
                                                    {% set cellStyle = cellStyle ~ 'background-color: #' ~ cell.fill ~ ';' %}
                                                {% endif %}
                                            {% endif %}

                                            {# 3. Render the TD #}
                                            <td style="{{ cellStyle }}">
                                                {% if cell %}
                                                    {{ cell.value }}
                                                {% endif %}
                                            </td>

                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}